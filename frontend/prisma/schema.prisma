generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model acts {
  id                Int       @id @default(autoincrement())
  title             String?
  act_number        String?
  simple_title      String?
  content           String?
  refs              Json?
  texts             Json?
  item_type         String?   @db.VarChar(50)
  announcement_date DateTime? @db.Date
  change_date       DateTime? @db.Timestamp(6)
  promulgation      DateTime? @db.Date
  item_status       String?   @db.VarChar(50)
  comments          String?
  keywords          String[]
  file              String?
  votes             Json?
  category          String?
  idempotency_key   String?   @unique @db.VarChar(255)
  impact_section    String?
  confidence_score  Decimal?  @db.Decimal(3,2)
  needs_reprocess   Boolean   @default(false)
  created_at        DateTime  @default(now()) @db.Timestamptz
  updated_at        DateTime  @updatedAt @db.Timestamptz
  ingested_at       DateTime? @db.Timestamptz
  }

model category {
  id       Int     @id @default(autoincrement())
  category String?
  keywords Json?   @db.Json
}

model keywords {
  keyword String @id
}
